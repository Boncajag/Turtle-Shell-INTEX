<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Volunteer User Maintenance</title>
  <link rel="stylesheet" href="eventMaintenance.css">
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="schedule.css">
  <style>
    /* Table wrapper with overflow and scrollbar */
    .table-wrapper {
      max-height: 400px;
      overflow-y: auto;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <header style="background-color: #869986; color: white; padding: 15px; text-align: center;">
    <h1 style="margin: 0;">Volunteer Maintenance</h1>
    <p>Schedule Your Event</p>
    <nav style="text-align: right; margin-right: 20px; margin-top: -20px;">
        <a href="/internalLanding" style="margin-right: 15px; text-decoration: none; color: #333;">Admin Home</a>
        </div>
        <a href="/logout" style="margin-right: 15px; text-decoration: none; color: #333;">Logout</a>
    </nav>
  </header>

  <!-- Table Wrapper for Scrollbar -->
  <div class="table-wrapper">
    <!-- Table for displaying volunteer records -->
    <table border="1" cellspacing="0" cellpadding="5">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Zip Code</th>
          <th>Referral Source</th>
          <th>Sewing Level</th>
          <th>Hours per Month</th>
          <th>Title</th>
          <th>Username</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% volunteer.forEach(row => { %>
          <% if (row.title === 'Volunteer') { %>
            <tr>
              <td><%= row.first_name %></td>
              <td><%= row.last_name %></td>
              <td><%= row.email %></td>
              <td><%= row.area_code + '-' + row.phone_number %></td>
              <td><%= row.street %></td>
              <td><%= row.city %></td>
              <td><%= row.state %></td>
              <td><%= row.zip_code %></td>
              <td><%= row.referall_source %></td>
              <td><%= row.sewing_level %></td>
              <td><%= row.hours_per_month %></td>
              <td><%= row.title %></td>
              <td><%= row.username %></td>
              <td>
                <!-- Edit Button -->
                <form action="/editVolunteer/<%= row.volunteer_id %>" method="GET" style="display:inline;">
                  <button type="submit">Edit</button>
                </form>
                <!-- Delete Button -->
                <form action="/deleteVolunteer/<%= row.volunteer_id %>" method="POST" style="display:inline;">
                  <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                </form>
              </td>
            </tr>
          <% } %>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Button to add a new volunteer -->
  <form action="/addVolunteer" method="GET" style="text-align:center; margin-top:20px;">
    <button type="submit">Add New Volunteer</button>
  </form>
</body>
</html>
