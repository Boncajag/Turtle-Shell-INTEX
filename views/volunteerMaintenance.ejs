<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Volunteer User Maintenance</title>
</head>
<body>
  <h1> Volunteer Maintenance</h1>
  <a href="/logout">Logout</a>
  <a href="/">Home</a>

  <!-- Table for displaying user records -->
  <table border="1" cellspacing="0" cellpadding="5">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip Code</th>
        <th>Referral Source</th>
        <th>Sewing Level</th>
        <th>Hours per Month</th>
        <th>Title</th>
        <th>Username</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% volunteer.forEach(row => { %>
        <% if (row.title === 'Volunteer') { %>
          <tr>
            <td><%= row.first_name %></td>
            <td><%= row.last_name %></td>
            <td><%= row.email %></td>
            <td><%= row.area_code + '-' + row.phone_number %></td>
            <td><%= row.street %></td>
            <td><%= row.city %></td>
            <td><%= row.state %></td>
            <td><%= row.zip_code %></td>
            <td><%= row.referall_source %></td>
            <td><%= row.sewing_level %></td>
            <td><%= row.hours_per_month %></td>
            <td><%= row.title %></td>
            <td><%= row.username %></td>
            <td>
              <!-- Edit Button -->
              <form action="/editVolunteer/<%= row.volunteer_id %>" method="GET" style="display:inline;">
                <button type="submit">Edit</button>
              </form>
              <!-- Delete Button -->
              <form action="/deleteVolunteer/<%= row.volunteer_id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
              </form>
            </td>
          </tr>
        <% } %>
      <% }) %>
    </tbody>
  </table>

  <!-- Button to add a new user -->
  <form action="/addVolunteer" method="GET" style="text-align:center; margin-top:20px;">
    <button type="submit">Add New Volunteer</button>
  </form>
</body>
</html>
